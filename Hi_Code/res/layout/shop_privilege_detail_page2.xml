<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:custom="http://schemas.android.com/apk/res/com.android.ruifeng.hi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

  <com.customview.view.CustomTopbarView
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:topbar_back_text="优惠列表"
        custom:topbar_title="优惠详情" >
    </com.customview.view.CustomTopbarView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bottom_bar_bg_color"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/store_look_over_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_detail_page_bottom_bar_height"
                android:layout_weight="1"
                android:background="@drawable/store_bottom_bar_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/item_line_color" />

                <ImageView
                    android:id="@+id/store_look_over"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dp"
                    android:src="@drawable/store_look_over_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/store_privilege_obtain_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_detail_page_bottom_bar_height"
                android:layout_weight="1"
                android:background="@drawable/store_bottom_bar_bg" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/item_line_color" />

                <ImageView
                    android:id="@+id/store_privilege_obtain"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="3dp"
                    android:src="@drawable/store_privilege_obtain_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/store_privilege_share_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_detail_page_bottom_bar_height"
                android:layout_weight="1"
                android:background="@drawable/store_bottom_bar_bg" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/item_line_color" />

                <ImageView
                    android:id="@+id/store_privilege_share"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="3dp"
                    android:src="@drawable/store_privilege_share_icon" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>