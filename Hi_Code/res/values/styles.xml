    <!-- ***********************全局UI样式************************** -->
    <style name="ChatPageTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <!-- TopBar底层布局样式 -->
    <style name="topbar_bg_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@color/theme_color</item>
    </style>

    <!-- TopBar标题样式 -->
    <style name="topbar_title_style">
        <item name="android:textSize">@dimen/topbar_title_size</item>
        <item name="android:textColor">@color/topbar_title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxEms">6</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TopBar右边控件样式 -->
    <style name="topbar_right_widget_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/topbar_LR_icon_margin</item>
        <item name="android:layout_width">@dimen/topbar_right_widget_width</item>
        <item name="android:layout_height">@dimen/topbar_right_widget_height</item>
    </style>
    <!-- TopBar左边控件样式 -->
    <style name="topbar_left_widget_style">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/topbar_LR_icon_margin</item>
        <item name="android:layout_width">@dimen/topbar_right_widget_width</item>
        <item name="android:layout_height">@dimen/topbar_right_widget_height</item>
    </style>
    <!-- TopBar左边返回控件的背景样式 -->
    <style name="topbar_left_back_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/bar_btn_bg</item>
        <item name="android:paddingRight">@dimen/topbar_left_back_bg_rightpadding</item>
    </style>

    <!-- TopBar返回控件图标的样式 -->
    <style name="topbar_left_back_icon_style">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">@dimen/topbar_left_back_icon_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/topbar_white_back_icon</item>
    </style>

    <!-- TopBar返回控件文字的样式 -->
    <style name="topbar_left_back_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/topbar_left_back_text_marginleft</item>
        <item name="android:paddingRight">@dimen/topbar_left_back_text_marginleft</item>
        <item name="android:textColor">@color/topbar_left_back_text_color</item>
        <item name="android:textSize">@dimen/topbar_left_back_text_size</item>
    </style>

    <style name="topbar_left_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/topbar_left_back_text_marginleft</item>
        <item name="android:paddingRight">@dimen/topbar_left_back_text_marginleft</item>
        <item name="android:textColor">@color/topbar_left_back_text_color</item>
        <item name="android:textSize">@dimen/topbar_left_back_text_size</item>
    </style>

    <!-- topBar中右边文字控件的样式 -->
