<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
         android:background="@color/custom_dialog_bg_color" 
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="About to call 323"
            android:textColor="@color/custom_dialog_title_text_color"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Are you sure you want to proceed?"
            android:textColor="@color/custom_dialog_content_text_color"
            android:textSize="16dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/split_line" />

        <FrameLayout
            android:id="@+id/switchBtnLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#0fff"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/orange_lightly_btn_bg"
                    android:text="算了"
                    android:textColor="@color/custom_dialog_btn_text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ok"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/orange_lightly_btn_bg"
                    android:text="好的"
                    android:textColor="@color/custom_dialog_btn_text_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#afff" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/singleBtnLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#0fff"
            android:visibility="gone" >

            <TextView
                android:id="@+id/confirmBtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/orange_lightly_btn_bg"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="#a000"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Code/git/firm/kaixinguo/Hi_Code/res/layout/custom_dialog_layout.xml -->