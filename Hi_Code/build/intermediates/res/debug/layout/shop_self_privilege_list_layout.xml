<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/store_privilege_item_height"
    android:background="#fff"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="@dimen/store_privilege_item_height"
        android:layout_height="@dimen/store_privilege_item_height"
        android:background="#fff"
        >

        <ImageView
            android:id="@+id/privilege_list_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
        <!-- image corner 

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/clip_rect_bg" />-->
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/list_item_bg"
        android:layout_marginLeft="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/privilege_list_shop_name"
                    style="@style/text_max_num_firstlevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="南城烧烤店"
                    android:textColor="@color/black"
                    android:textSize="@dimen/store_privilege_item_title_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/privilege_list_main_title"
                    style="@style/text_max_num_secondlevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="买一送一，你来就送！"
                    android:textColor="@color/app_theme_color"
                    android:textSize="@dimen/store_privilege_item_title_textsize"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/privilege_list_shop_detail"
                    style="@style/text_max_num_thirdlevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="具体内容请参考本店海报..." />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/icon_normal_size"
            android:layout_height="@dimen/icon_normal_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/privilege_more" />

  
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/Code/git/firm/kaixinguo/Hi_Code/res/layout/shop_self_privilege_list_layout.xml -->