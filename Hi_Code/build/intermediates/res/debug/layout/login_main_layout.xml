<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.android.ruifeng.hi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/login_meimei_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/login_meimei_icon" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@id/login_meimei_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/login_word_note" />

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="" />

        <LinearLayout
            android:id="@+id/cus_sign_layout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_above="@id/teamName"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="@dimen/login_btn_margin_left_right"
            android:layout_marginRight="@dimen/login_btn_margin_left_right"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <com.customview.view.CustomBtnView
                    android:id="@+id/registerBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/unit_margin_level_three"
                    custom:btn_color_style="BG_OUTLINE"
                    custom:btn_text="注册" >
                </com.customview.view.CustomBtnView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <com.customview.view.CustomBtnView
                    android:id="@+id/phoneLoginBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    
                    custom:btn_color_style="BG_OUTLINE"
                    custom:btn_text="登录" >
                </com.customview.view.CustomBtnView>
            </LinearLayout>
        </LinearLayout>

        <com.customview.view.CustomBtnView
            android:id="@+id/qq_sign_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/cus_sign_layout"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/login_btn_margin_left_right"
            android:layout_marginRight="@dimen/login_btn_margin_left_right"
            custom:btn_color_style="BG_OUTLINE"
            custom:btn_img="@drawable/login_qq_icon"
            custom:btn_text="QQ登录" >
        </com.customview.view.CustomBtnView>

        <com.customview.view.CustomBtnView
            android:id="@+id/sina_sign_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/qq_sign_layout"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/login_btn_margin_left_right"
            android:layout_marginRight="@dimen/login_btn_margin_left_right"
            custom:btn_color_style="BG_OUTLINE"
            custom:btn_img="@drawable/login_sina_icon"
            custom:btn_text="新浪微博登录" >
        </com.customview.view.CustomBtnView>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/Code/git/firm/kaixinguo/Hi_Code/res/layout/login_main_layout.xml -->