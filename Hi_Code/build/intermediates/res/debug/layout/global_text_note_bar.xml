<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barLayout"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:background="@color/page_bg_level_three"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/barImageNote"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/wifi_locat_icon" />

    <TextView
        android:id="@+id/barTextNote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/barImageNote"
        android:textSize="16dp"
        android:text="已注册WIFI"
        android:textColor="@color/text_color_level_one" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/note_more_icon" />
</RelativeLayout>
