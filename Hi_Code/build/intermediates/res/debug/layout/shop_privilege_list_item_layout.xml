<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff" >

                <ImageView
                    android:id="@+id/storeIcon"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/app_icon" />
                <!-- image corner -->

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/clip_rect_bg" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:maxEms="12"
                android:singleLine="true"
                android:text="美美咖啡馆"
                android:textColor="@color/text_color_level_one"
                android:textSize="@dimen/text_btn_level_three" />

            <ImageView
                android:id="@+id/expandIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/down_more_icon" />
        </RelativeLayout>
    </LinearLayout>
	<RelativeLayout
	    android:id="@+id/expandItem"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	     android:focusable="true"
	    >
	    <com.xlistview.XListView
	        android:id="@+id/expandList"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        style="@style/list_style"
	        ></com.xlistview.XListView>
	</RelativeLayout>
</LinearLayout><!-- From: file:/D:/Code/git/firm/kaixinguo/Hi_Code/res/layout/shop_privilege_list_item_layout.xml -->