<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.android.ruifeng.hi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.customview.view.CustomTopbarView
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:topbar_back_text="留言墙"
        custom:topbar_title="点赞用户" >
    </com.customview.view.CustomTopbarView>
	<com.customview.view.CustomPageView
	    android:id="@+id/pageView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:visibility="gone"
	    ></com.customview.view.CustomPageView>
    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:padding="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        style="@style/list_style"
        android:background="#fff"
        android:listSelector="@drawable/btn_selector_bg"
        android:verticalSpacing="10dp" >
    </GridView>

</LinearLayout><!-- From: file:/D:/Code/git/firm/kaixinguo/Hi_Code/res/layout/leave_note_praise_page.xml -->